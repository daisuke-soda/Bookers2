<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @new_book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to (@book.user) do %>
						<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no_image2.jpg") %><br>
						<%= @book.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book.title, @book %></td>
					<td><%= @book.body %></td>

					<% if @book.user == current_user %>
						<td><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
						<td><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
					<% end %>
					<td>
						<% if current_user.already_favorited?(@book) %>
							<%= link_to book_favorites_path(@book), method: :delete do %>
							<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
					  <% end %>
						<% else %>
							<%= link_to book_favorites_path(@book), method: :post do %>
							<i class="fa fa-heart-o" aria-hidden="true"></i>
				    	<% end %>
						<% end %>
						<%= @book.favorites.count %>
						<td>コメント数:
							<%= @book.book_comments.count %></a>
						</td>

							<% @book.book_comments.each do |book_comment| %>
								<tr>
									<td>
											<%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image2.jpg") %><br>
											<%= book_comment.user.name %>
									</td>
						
									<td>
										<%= book_comment.comment %>
									</td>
						
									<td>
										<% if book_comment.user_id == current_user.id %>
											<%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn-sm btn-danger" %>
										<% end %>
									</td>
								</tr>
							<% end %>


					</td>
				</tr>

			</table>
			<%= form_for [@book, @book_comment] do |f| %>
			<div class="row">
				<div class="col-sm-12">
					<%= f.text_area :comment, rows:'5', class: "form-control" %>
				</div>
			</div>
					<%= f.submit "送信", class: "btn btn-mg btn-base-1 mt-20 pull-right" %>
			<% end %>
				
	</div>
</div>